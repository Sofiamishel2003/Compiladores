let digit = ['0'-'9']
let letter = ['a'-'z' 'A'-'Z']
let ident = letter (letter | digit)*

rule getToken =
    ' '          { return "WHITESPACE"; }
  | '\n'         { return "EOL"; }
  | digit+       { return "NUM"; }
  | ident        { return "ID"; }
  | '+'          { return "PLUS"; }
  | '-'          { return "MINUS"; }
  | '*'          { return "TIMES"; }
  | '/'          { return "DIV"; }
  | '('          { return "LPAREN"; }
  | ')'          { return "RPAREN"; }
  | eof          { return "EOF"; }

